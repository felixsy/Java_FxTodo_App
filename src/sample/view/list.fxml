<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.controller.ListController">
   <children>
      <AnchorPane focusTraversable="true" layoutY="100.0" prefHeight="300.0" prefWidth="700.0">
         <children>
            <TextField fx:id="additemTask" layoutX="17.0" layoutY="90.0" prefHeight="38.0" prefWidth="250.0" promptText="Enter a task">
               <opaqueInsets>
                  <Insets bottom="1.0" />
               </opaqueInsets>
            </TextField>
            <TextField fx:id="additemDescription" layoutX="17.0" layoutY="147.0" prefHeight="38.0" prefWidth="250.0" promptText="Description">
               <font>
                  <Font size="14.0" />
               </font>
            </TextField>
            <Button fx:id="addtaskBtn" layoutX="17.0" layoutY="200.0" mnemonicParsing="false" prefHeight="38.0" prefWidth="250.0" style="-fx-background-color: black;" text="Add Task" textFill="#fffbfb">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
            <Label fx:id="taskSuccessLabel" layoutX="222.0" layoutY="64.0" text="New Task Added Successfully! Add Another Task" textFill="#1907fa" visible="false" />
            <Label layoutX="85.0" layoutY="50.0" text="New Task Form">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Button fx:id="myTodosBtn" layoutX="554.0" layoutY="248.0" mnemonicParsing="false" prefHeight="38.0" prefWidth="136.0" style="-fx-background-color: darkred;" text="My 2DO's (2)" textFill="WHITE" visible="false" />
            <ListView fx:id="myListView" layoutX="278.0" layoutY="-3.0" prefHeight="289.0" prefWidth="410.0">
               <effect>
                  <DropShadow />
               </effect>
            </ListView>
         </children>
      </AnchorPane>
      <AnchorPane layoutY="-1.0" prefHeight="73.0" prefWidth="700.0" style="-fx-background-color: red;">
         <children>
            <Label layoutX="260.0" layoutY="8.0" prefHeight="69.0" prefWidth="181.0" text="My TODO's" textFill="#fffafa">
               <font>
                  <Font size="34.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
